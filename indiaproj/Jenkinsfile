pipeline {
  agent any

  tools {
    jdk 'Java 17'
    maven 'Maven'
  }

  stages {

    stage('Checkout Code') {
      steps {
        echo 'Pulling from Github'
        git branch: 'main',
            credentialsId: 'git_cred',
            url: 'https://github.com/Jayanth-N-Murthy/wipjen.git'
      }
    }

    stage('Test Code') {
      steps {
        echo 'JUNIT Test case execution started'
        bat '''
        cd indiaproj
        mvn clean test
        '''
      }
      post {
        always {
          junit 'indiaproj/target/surefire-reports/*.xml'
          echo 'Test stage completed'
        }
      }
    }

    stage('Build Project') {
      steps {
        echo 'Building Java project'
        bat '''
        cd indiaproj
        mvn clean package -DskipTests
        '''
      }
    }

    stage('Build the Docker Image') {
      steps {
        echo 'Building Docker Image'
        bat '''
        cd indiaproj
        docker build -t myjavaproj:1.0 .
        '''
      }
    }

    stage('Run Docker Container') {
      steps {
        echo 'Running Java Application'
        bat '''
        docker rm -f myjavaproj-container || exit 0
        docker run --name myjavaproj-container myjavaproj:1.0
        '''
      }
    }
  }

  post {
    success {
      echo 'Build and Run is SUCCESSFUL!'
    }
    failure {
      echo 'OOPS!!! Failure.'
    }
  }
}
